<div class="page-header">
  <h1>
    <%= t 'root.layouts.namespace.login' %>
    <small><%= t 'root.layouts.namespace.login_blurb' %></small>
  </h1>
</div>

<%= simple_form_for :session, :url => sessions_path, :html => { :class => "form-horizontal" } do |form| %>
  <%= form.input :username %>
  <%= form.input :password %>
  
  <%= content_tag :div, :class => "form-actions" do %>
    <%= form.button :submit, :value => t('root.layouts.namespace.login'), :class => "btn-primary" %>
  <% end %>
<% end %>
