<div class="page-header">
  <h1>
    Signup
    <small>if you don't have an account yet</small>
  </h1>
</div>

<%= simple_form_for @user, :html => { :class => "form-horizontal" } do |form| %>
  <%= form.input :username %>
  <%= form.input :password %>
  
  <%= content_tag :div, :class => "form-actions" do %>
    <%= form.button :submit, :value => "Signup", :class => "btn-primary" %>
  <% end %>
<% end %>
