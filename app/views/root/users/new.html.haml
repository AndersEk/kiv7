.page-header
  %h1
    = t 'root.layouts.namespace.signup'
    %small= t 'root.layouts.namespace.signup_blurb'

= simple_form_for @user, :html => { :class => "form-horizontal" } do |form|
  = form.input :username
  = form.input :password
  
  = content_tag :div, :class => "form-actions" do
    = form.button :submit, :value => t('root.layouts.namespace.signup'), :class => "btn-primary"
