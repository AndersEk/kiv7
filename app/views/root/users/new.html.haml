.page-header
  %h1
    = t '.signup'
    %small= t '.signup_blurb'

= simple_form_for @user, :html => { :class => "form-horizontal" } do |form|
  = form.input :username
  = form.input :password
  
  = content_tag :div, :class => "form-actions" do
    = form.button :submit, :value => t('.signup'), :class => "btn-primary"
